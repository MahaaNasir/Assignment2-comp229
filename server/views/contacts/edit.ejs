<!--  This page includes edit contacts section ---->

<!-- main ---->
<main class="contacts-container">
    <h1 id="edit-h1"><%= title %></h1>
    <!-- edit contact information ---->
    <div class="row" id="add-form">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <!-- edit name---->
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField" 
                    placeholder="Enter the name"
                    name="name" 
                    value="<%= contacts.name %>"
                    required>
                    
                </div>
                <!-- edit phone---->
                <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField" 
                    placeholder="Enter the phone number "
                    name="phone"
                    value="<%= contacts.phone %>"
                    required>
                    
                </div>
                <!-- edit email---->
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField" 
                    placeholder="Enter the email address"
                    name="email" 
                    value="<%= contacts.email %>"
                    required>
                    
                </div>
                <br>
                <!-- submit and cancel buttons ---->
                <button class="btn btn primary" type="submit" id="submit-btn">
                    <i class="fas fa-edit"></i>
                    Submit
                </button>

                <a href="/contacts-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>
                    Cancel
                </a>
            </form>
        </div>
    </div>
</main>


